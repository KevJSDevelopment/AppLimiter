<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ThemeColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Light Theme Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource LightPrimaryBackground}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource LightSecondaryBackground}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource LightBorderColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource LightTextColor}"/>

    <!-- Special Purpose Brushes -->
    <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightBaseColor}"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="{StaticResource DarkBaseColor}"/>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}"/>

    <!-- Utility Brushes -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
</ResourceDictionary>