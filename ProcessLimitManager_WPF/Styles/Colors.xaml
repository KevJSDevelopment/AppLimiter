<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Colors -->
    <Color x:Key="LightPrimaryColor">#1976D2</Color>
    <Color x:Key="LightSecondaryColor">#0D47A1</Color>
    <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
    <Color x:Key="LightSurfaceColor">#F5F5F5</Color>
    <Color x:Key="LightTextColor">#212121</Color>
    <Color x:Key="LightBorderColor">#BDBDBD</Color>

    <!-- Dark Theme Colors -->
    <Color x:Key="DarkPrimaryColor">#2196F3</Color>
    <Color x:Key="DarkSecondaryColor">#1976D2</Color>
    <Color x:Key="DarkBackgroundColor">#121212</Color>
    <Color x:Key="DarkSurfaceColor">#1E1E1E</Color>
    <Color x:Key="DarkTextColor">#FFFFFF</Color>
    <Color x:Key="DarkBorderColor">#424242</Color>

    <!-- Brushes - Light Theme -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource LightPrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource LightSecondaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource LightSurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource LightTextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource LightBorderColor}"/>
</ResourceDictionary>